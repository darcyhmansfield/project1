<%= form_for @wrestler do |f| %>
    <fieldset>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :image %>
        <%= f.url_field :image %>

        <%= f.label :country %>
        <%= f.text_field :country %>

        <%= f.label :height %>
        <%= f.number_field :height %>

        <%= f.label :weight %>
        <%= f.number_field :weight %>

        <%= f.label :exp, "Experience (years)" %>
        <%= f.number_field :exp %>

        <%= f.label :rating %>
        <%= f.number_field :rating, step: 0.01 %>

        <%= f.submit %>

    </fieldset>
<% end %>