<%= form_for(@wrestler, :html => {:multipart => true}) do |f| %>
    <fieldset>

        <%= f.label :name, :class => 'form-label' %>
        <%= f.text_field :name, :class => 'form-control' %>

        <%= f.label :image, :class => 'form-label' %>
        <%= f.text_field :image, :class => 'form-control' %>

        <%= f.label :country, :class => 'form-label' %>
        <%= f.text_field :country, :class => 'form-control' %>

        <%= f.label :height, :class => 'form-label' %>
        <%= f.number_field :height, :class => 'form-control' %>

        <%= f.label :weight, :class => 'form-label' %>
        <%= f.number_field :weight, :class => 'form-control' %>

        <%= f.label :exp, "Experience (years)", :class => 'form-label' %>
        <%= f.number_field :exp, :class => 'form-control' %>

        <%= f.label :rating, :class => 'form-label' %>
        <%= f.number_field :rating, step: 0.01, :class => 'form-control' %>

        <%= f.label :promotion_id, :class => 'form-label' %>
        <%= f.select :promotion_id, Promotion.pluck(:name, :id), :class => 'form-select', :id => "exampleFormControlSelect1" %>

        <%= f.submit :class => "btn btn-primary" %>

    </fieldset>
<% end %>