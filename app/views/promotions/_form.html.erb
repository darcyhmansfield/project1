<%= form_for @promotion do |f| %>
    <fieldset>
        <%= f.label :abbrev, "Abbreviation", :class => 'form-label'  %>
        <%= f.text_field :abbrev, :class => 'form-control'  %>

        <%= f.label :logo, :class => 'form-label'  %>
        <%= f.text_field :logo, :class => 'form-control' %>

        <%= f.label :name, :class => 'form-label'  %>
        <%= f.text_field :name, :class => 'form-control' %>

        <%= f.label :country, :class => 'form-label'  %>
        <%= f.text_field :country, :class => 'form-control' %>

        <%= f.label :year, :class => 'form-label'  %>
        <%= f.number_field :year, :class => 'form-control' %>

        <%= f.label :instagram, :class => 'form-label'  %>
        <%= f.url_field :instagram, :class => 'form-control' %>

        <%= f.submit :class => "btn btn-primary" %>

    </fieldset>
<% end %>